@model CreateRoleViewModel
@{
    ViewData["Title"] = "CreateNewRole";
}
<div class="container col-md-12">
    <div class="card mb-3">
        <div class="col-md-4">
            <form method="post" asp-controller="Administration" asp-action="CreateRole">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="RoleName" class="control-label"></label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" style="width:auto">Create Role</button>
                    <a asp-action="ListOfRoles" asp-controller="Administration" class="btn btn-danger">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>