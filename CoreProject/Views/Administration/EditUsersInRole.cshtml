@model List<UserRoleViewModel>
@{
    var roleId = ViewBag.roleId;
}
<form method="post" asp-controller="Administration" asp-action="EditUsersInRole">
    <div class="card">
        <div class="card-header">
            <h2> Add or remove users to/from this role</h2>
        </div>
        <div class="card-body">
@for (int i = 0; i <Model.Count; i++)
{
            <div class="form-check-m-1">
                <input type="hidden" asp-for="@Model[i].UserId" class="form-check-input" />
                <input type="hidden" asp-for="@Model[i].UserName" class="form-check-input" />
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].UserName</label>
            </div>

}        </div>
        <div class="card-footer">
            <input type="submit"  class="btn btn-success" value="Update" style="width:auto" />
            <a asp-controller="Administration" asp-action="EditRole" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>