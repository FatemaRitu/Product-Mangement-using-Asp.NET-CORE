@model EditRoleViewModel
@{
    ViewBag.Title = "EditRole";
}

<div class="container col-md-8">
    <h2>Update Role Information</h2>
    <div class="card mb-12">
        <div class="col-md-12">
            <form method="post" asp-controller="Administration" asp-action="CreateRole">
                <div class="form-group">
                    <label asp-for="Id">Role Id</label>
                    <input asp-for="Id" disabled class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RoleName">Role Name</label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <button asp-controller="Administration" asp-action="EditRole" type="submit" class="btn btn-primary" style="width:auto">Update Role</button>
                    <a asp-controller="Administration" asp-action="ListOfRoles" class="btn btn-success" style="width:auto">Back to RoleList</a>
                </div>
                <div class="card">
                    <div class="card-header"><h3>Users in this role</h3></div>
                    <div class="card-body">
                        @if (Model.Users.Any())
                        {
                            foreach (var user in Model.Users)
                            {
                                <h5 class="card-title">@user</h5>
                            }
                        }
                        else
                        {
                            <h5>None at this moment</h5>
                        }
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Administration" asp-action="EditUsersInRole"
                           asp-route-id="@Model.Id" class="btn btn-primary"
                           style="width:auto">Add or Remove Users</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

