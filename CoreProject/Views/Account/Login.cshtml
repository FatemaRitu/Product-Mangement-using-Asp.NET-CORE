@model LoginViewModel
@{
    ViewBag.Title = "User LogIn";
}
<form method="post" asp-action="Login" asp-controller="Account" asp-route-returnurl="@Context.Request.Query["ReturnUrl"]">
    <div class="container col-md-5">
        <div class="card border-dark">
            <div class="card-header text-center border-danger" style="color:#75c9ee">
                <h3 class="mt-3">Account Login</h3>
            </div>
            <div class="card-body">
                <div class="m-3">
                    <label>Email Address</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="m-3">
                    <label>Password</label>
                    <input asp-for="Password" class="form-control" placeholder="Enter your Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div asp-validation-summary="All"></div>
                <div class=" card-footer">
                    <input type="submit" value="Login" class="btn btn-primary btn-block" />
                </div>
                <div>
                    <p>Don't have an account?</p>
                    <a class="nav-link" asp-controller="Account" asp-action="Registration">Click Here to Registration....</a>

                </div>
            </div>
        </div>
    </div>
</form>